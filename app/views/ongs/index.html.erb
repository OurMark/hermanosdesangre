<div class="row ong-list-page">
  <div class="col-xs-12 col-sm-offset-6 col-sm-6 col-md-offset-6 col-md-6 col_der">
    <div class="col-xs-12 ongs-filter">
      <div class="form-group">
        <label for=""> Busca aqui tu ONG/Banco de sangre mas cercano</label>
        <input type="text" class="typeahead form-control ong-filter-input" name="ong-filter" id="ong-filter" placeholder="Escribe tu busqueda...">
        <button type="button" class="input-submit" id="clear-filter">Borrar Busqueda</button>
      </div>
    </div>
    <div class="ongs">
      <% @ongs.each do |ong| %>
        <% if ong.has_details? %>
          <div class="banco col-md-12">
            <div class="ficha_banco">
              <div class="bar-main-container">
                <div class="campania">Septiembre 2014</div><div class="faltandias">20</div>
                <div class="bar-container">
                  <div class="objetivo">300</div>
                  <div class="bar" style="width: 70%;"><div>70%</div></div>
                  <div class="registrados">210</div>
                </div>
              </div>
              <p><%= ong.phone %> - <%= ong.adminEmail %></p>
              <p><%= ong.websiteUrl %> - <%= ong.facebookPage %></p>
              <div class="reservar"><%= link_to "Donar aquÃ­", new_ong_booking_path(ong) %></div>
            </div>
            <h3><%= ong.name %></h3>
            <h2><%= ong.address %>,<br/><%= ong.address2 %></h2>
            <h4>c.p. <%= ong.zip %>. <%= ong.city %>, <%= ong.state %>, <%= ong.country_id %>.</h4>
            <div style="clear:both;"></div>
          </div>
        <% end -%>
      <% end %>
    </div>
    <div class="ongs"></div>
    <ul id="ong-list-page-pagging" class="pagination"></ul>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 columna col_izq">
    <div class="how-works-boton-donar">
        <%= link_to content_tag(:p, "quiero donar"), current_user ? ongs_path : user_session_path %>
        <div>
          <p>Si puedes hacerlo, debes hacerlo</p>
        </div>
    </div>
  </div>
</div>
